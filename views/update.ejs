<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>UPDATE DB</title>
  <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.2.3/foundation.css">
  <link type="text/css" rel="stylesheet" href="/css/app.css">
  <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
  <script src="/js/update.js" type="text/javascript" charset="utf-8"></script>
</head>
<body>

    <div class="contain">
     <h1>Update</h1>
      <section class="update">
          <form name='add-it' method="POST" action="/incident/update">
            <div class="row">
              <div class="large-4 columns">
                <label>TYPE
                      <select name="type">
                        <option value="Traffic" required>Traffic</option>
                        <option value="Collapse">Collapse</option>
                        <option value="Park">Park</option>
                      </select>
                    </label>
              </div>
              <div class="large-4 columns">
                  <label>MONTH
                  <select name="month">
                    <option value="january" required>January</option>
                    <option value="february">February</option>
                    <option value="march">March</option>
                    <option value="april">April</option>
                    <option value="may">May</option>
                    <option value="june">June</option>
                    <option value="july">July</option>
                    <option value="august">August</option>
                    <option value="september">September</option>
                    <option value="october">October</option>
                    <option value="november">November</option>
                    <option value="december">December</option>
                  </select>
                </label>
              </div>
              <div class="large-4 columns">
                <label>YEAR
                  <input name="year" type="text" required/>
                </label>
              </div>
            </div>
            <div class="row">
             <div class="large-3 columns">
                <label>HORSE NAME or Unknown
                  <input name="name" type="text" required />
                </label>
              </div>
              <div class="large-3 columns">
                <label>LOCATION
                  <input name="location" type="text" required/>
                </label>
              </div>
              <div class="large-3 columns">
                <label>LAT
                  <input name="lat" type="text" required />
                </label>
              </div>
              <div class="large-3 columns">
                <label>LNG
                  <input name="lng" type="text" required/>
                </label>
              </div>
            </div>
            <div class="row">
              <div class="large-12 columns">
                <label> DESCRIPTION
                  <textarea name="description" required></textarea>
                </label>
              </div>
            </div>
            <div class="row">
              <div class="large-12 columns">
                <label>FATAL</label>
                <input type="radio" name="fatal" value="true" id="fatalTrue" required><label for="fatalTrue">Yes</label>
                <input type="radio" name="fatal" value="false" id="fatalFalse" checked><label for="fatalFalse">No</label>
              </div>
            </div>
            <input type="submit" id="add-btn" class="button" value="Add New Incident" />
          </form>
      </section>

     <% incidents.forEach( function(incident){  %>

        <div class="update-outer">
          <h2>Incident: <%= incident.incident_id %></h2>
          <p>TYPE: <%= incident.incident_type %></p>
          <p>MONTH: <%= incident.incident_month %></p>
          <p>YEAR: <%= incident.incident_year %></p>
          <p>HORSE: <%= incident.horse_name %></p>
          <p>DESC: <%= incident.incident_description %></p>
          <p>LOCATION: <%= incident.incident_location %></p>
          <p>LAT: <%= incident.incident_lat %></p>
          <p>LNG: <%= incident.incident_lng %></p>
          <p>FATAL: <%= incident.fatal %></p>
          <button>Edit</button>
        </div>



      <% }) %>
    </div>
</body>
</html>



